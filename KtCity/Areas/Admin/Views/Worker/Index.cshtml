@model List<Worker>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div style="margin-bottom:1rem;">
    <h2>თანამშრობლების ცხრილი</h2>
</div>

<table class="mainContainer_content-table">
    <thead class="thead">
        <tr class="thead-tr">
            <td class="thead-tr-td">
                სურათი
            </td>
            <td class="thead-tr-td">
                სახელი და გვარი
            </td>
            <td class="thead-tr-td">
                პოზიცია
            </td>
            <td class="thead-tr-td">
                რედაქტირება
            </td>
            <td class="thead-tr-td">
                წაშლა
            </td>
        </tr>
    </thead>
    <tbody class="tbody">
        @if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
        <tr class="tbody-tr">
            <td class="tbody-tr-td">
                <img src='/img/@(item.Image??ConfigClass.NoImage)' alt="">
            </td>
            <td class="tbody-tr-td">
                <span>@item.FirstName</span>
                &nbsp;
                <span>@item.LastName</span>
            </td>
            <td class="tbody-tr-td">
                @item.Position.Name
            </td>
            <td class="tbody-tr-td">
                <a asp-action="Edit"
                   asp-route-id="@item.id"><i class="far _coursor  fa-edit" data-id="1"></i></a>
            </td>
            <td class="tbody-tr-td">
                <a data-id="@item.id" class="dlwoker">
                    <i class="far _coursor fa-trash-alt"></i>
                </a>

            </td>
        </tr>
            }

        }
        else
        {
            <tr class="tbody-tr">
                <td class="tbody-tr-td">
                </td>
                <td class="tbody-tr-td">
                    ბაზები ცარიელია
                </td>
                <td class="tbody-tr-td">
                </td>
                <td class="tbody-tr-td">
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            let btns = $(".dlwoker");
            btns.each((i, el) => {
                $(el).click(e => {
                    e.preventDefault();
                    let id = $(el).data("id");
                    if (confirm("ნამდვიალდ გსურთ წაშლა?")) {
                        $.ajax({
                            url: "/api/worker/delete",
                            method: "DELETE",
                            dataType: "json",
                            data: { id: id },
                            success: function (data) {
                                location.reload();
                            },
                            error: function (data) {
                                alert(`${data.statusText} => ${data.statusCode}`)
                            }
                        })
                    }
                })
            })
        });
    </script>
}